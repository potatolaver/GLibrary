<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--SwipeBackLayout-->
    <style name="SwipeBackLayout">
        <item name="edge_size">50dip</item>
        <item name="shadow_left">@drawable/shadow_left</item>
        <item name="shadow_right">@drawable/shadow_right</item>
        <item name="shadow_bottom">@drawable/shadow_bottom</item>
    </style>

    <!--StateLayout-->
    <declare-styleable name="StateLayout">
        <attr name="loadingLayoutResId" format="reference"/>
        <attr name="emptyContentLayoutResId" format="reference"/>
        <attr name="errorLayoutResId" format="reference"/>
        <attr name="enableAnim" format="boolean"/>
    </declare-styleable>

</resources>